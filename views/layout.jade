doctype html
html(ng-app="app")
  head
    title= title
    //meta(name="fragment" content="!")
    link(rel='stylesheet', href='/stylesheets/style.css')

    //-Inline Styles

    //-Ng-cloak preload for angular
    style
      |[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
      | display: none !important;
      |}

    //-JS Head Scripts

  body(ng-cloak)

    block content

    //- Global JS dependancies go here
    
    //- angular min
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js") 
    //- firebase
    script(src="https://cdn.firebase.com/js/client/2.2.4/firebase.js")                  
    //- angularfire min
    script(src="https://cdn.firebase.com/libs/angularfire/1.1.3/angularfire.min.js")    
    

    //- Additional page level dependancies go in the entry point file
    block page_dependancies

    //- Application scripts go here
    script(src="#{root}/javascripts/p_app.js")
    script(src="#{root}/javascripts/modules/firewire.js")
